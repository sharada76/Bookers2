<p id="notice"><%= flash[:notice] %></p>
<div class='container px-5 px-sm-0'>
	<div class='row'>
		<% if @book_detail.user == current_user %>
      <%= render 'users/list', book: @book %>
    <% else %>
      <%= render 'users/other_list', user: @book_detail.user %>
    <% end %>
		<div class='col-md-8 offset-md-1'>
			<h2>Book detail</h2>
	  		<table class='table'>
  		  <tr>
          <td>
            <%= link_to (attachment_image_tag @book_detail.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg"),  user_path(@book_detail.user) %>
            <%= link_to @book_detail.user.name, user_path(@book_detail.user) %>
          </td>
          <td><%= link_to @book_detail.title, book_path(@book_detail.id) %></td>
          <td><%= @book_detail.body %></td>
          <% if @book_detail.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book_detail.id), class:"btn btn-sm btn-success edit_book#{@book_detail.id}" %></td>
            <td><%= link_to 'Destroy', "/books/#{@book_detail.id}", method: :delete, class: "btn-sm btn-danger destroy_book#{@book_detail.id}", data: { confirm: '本当に消しますか？' } %></td>
          <% end %>
        </tr>
      </table>
		</div>
	</div>
</div>